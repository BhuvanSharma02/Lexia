<!-- res/values/styles.xml -->
<resources>
    <style name="JumbledLetterButton">
        <item name="android:background">@drawable/jumbled_letter_background</item> <!-- Custom background -->
        <item name="android:textSize">18sp</item> <!-- Fixed text size -->
        <item name="android:textColor">#000000</item> <!-- Text color -->
        <item name="android:gravity">center</item> <!-- Center text -->
        <item name="android:layout_width">60dp</item> <!-- Fixed width -->
        <item name="android:layout_height">60dp</item> <!-- Fixed height -->
        <item name="android:padding">8dp</item> <!-- Padding -->
    </style>

    <style name = "SyllableButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/rounded_button_syl</item>
        <item name="android:textColor">#2B2B2B</item> <!-- Dark text -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>